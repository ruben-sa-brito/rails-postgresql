<section class="py-5 col-4 text-center container">
<h1 style="margin-top:30px"> Cadastrar novo carro </h1>
    <% if flash[:error] %>
        <div class="alert alert-danger" role="alert">
            <%= flash[:error] %>
        </div>    
    <% end %>
    <hr>
    <div style="text-align:left">
    
        <form action="/carros" method="POST">
            <%= render "form" %>
            
            <hr>
            <button type="submit" class="btn btn-success">Enviar</button>
            <a href="/carros" class="btn btn-primary"> Voltar </a>
        </form> 
          
    </div>
</section>

